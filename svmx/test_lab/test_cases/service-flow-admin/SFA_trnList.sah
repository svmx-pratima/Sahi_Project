		$order="ascending";	
			_log("when order is ascending");

		//Ascending Order
		_click($sfa_pg_SFAListView.btn_heading_autName);
		_wait(5000,_isVisible($sfa_pg_SFAListView.btn_actionMenu));
		var $sortStatus=$sfa_pg_SFAListView.colSort($colName, $order);
        _log("Did it sort or NO"+$sortStatus);

		_assertTrue($sortStatus, "Links on "+$colName+" column are sorted in asceding order");
		
		//descending
		$order="descending";
		_log("when order is descending");

		_click($sfa_pg_SFAListView.btn_heading_autName);
		_wait(5000,_isVisible($sfa_pg_SFAListView.btn_actionMenu));
		var $sortStatus=$sfa_pg_SFAListView.colSort($colName, $order);
		_log("Did it sort or NO"+$sortStatus);
		_assertTrue($sortStatus, "Links on "+$colName+" column are sorted in descending order");
		
